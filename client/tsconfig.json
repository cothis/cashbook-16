{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": ["index.ts", "**/*.spec.ts", "**/*.test.ts", "index.d.ts"],
  "exclude": ["node_modules", "build"]
}
